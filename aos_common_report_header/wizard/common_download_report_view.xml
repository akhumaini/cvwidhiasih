<?xml version="1.0" encoding="utf-8"?>
<odoo>

    
    <record id="common_download_report_save_form" model="ir.ui.view">
        <field name="name">Download Reporting</field>
        <field name="model">common.download.report.save</field>
        <field name="arch" type="xml">
            <form string="Download Reporting">
	            <field name="name" invisible="1"/>
	            <div>
                     <h2>Download Report</h2>
                     <p>Here is the Excel Report: <field name="data" readonly="1" filename="name"/></p>
                 </div>
                 <footer>
                 	<button string="Close" class="btn-default" special="cancel"/>
                 </footer>
            </form>
        </field>
    </record>

</odoo>
